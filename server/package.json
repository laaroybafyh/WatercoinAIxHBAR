    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.1",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "nodemon": "^3.1.7",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
